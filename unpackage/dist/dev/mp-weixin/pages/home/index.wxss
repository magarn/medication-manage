
page {
      font-family: 'Noto Sans SC', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #F5F5F7;
}
#app {
      max-width: 750px;
      margin: auto;
      color: #333;
}
.header {
      display: flex;
      justify-content: space-between;
      padding: 1rem;
      align-items: center;
}
.header ._img {
      width: 50px;
      height: 50px;
}
.header .status-bar {
      font-size: 12px;
      display: flex;
      gap: 5px;
}
.menu-item {
      background-color: #007AFF;
      border-radius: 15px;
      padding: 1rem;
      margin: 1rem 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: white;
}
.menu-item-green {
      background-color: #34C759;
}
.menu-item .menu-text {
      font-size: 18px;
      font-weight: 500;
}
.menu-item .menu-description {
      font-size: 14px;
      margin-top: 0.5rem;
}
.menu-item .el-icon-arrow-right {
      font-size: 20px;
}
.content {
      text-align: center;
      margin: 2rem 0;
}
.content ._img {
      width: 200px;
      height: 200px;
}
.content .description {
      font-size: 22px;
      color: #333;
      margin-top: 1rem;
}
.menu-item{
		margin-left: 40px;
		margin-right: 40px;
}
  
